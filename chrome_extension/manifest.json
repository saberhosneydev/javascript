{
  "name": "PornMadeEasy",
  "description": "An easy way to download pics from hosted porn sites",
  "version": "2.0",
  "permissions": [
    "contextMenus",
    "activeTab",
    "tabs",
    "<all_urls>",
    "http://*/*",
    "https://*/*"
  ],
  "browser_action": {
    "default_title": "PornMadeEasy",
    "default_icon": "icon.png"
  },
  "manifest_version": 2,
  "background": {
    "persistent": false,
    "scripts": [ "popup.js" ]
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
